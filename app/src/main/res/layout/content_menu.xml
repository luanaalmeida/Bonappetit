<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_menu" tools:context="br.senac.pi.bonappetit.Menu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_Pratos"
        android:id="@+id/btPratos"
        android:layout_above="@+id/btSobremesas"
        android:layout_alignLeft="@+id/btBebidas"
        android:layout_alignStart="@+id/btBebidas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_Sobremesas"
        android:id="@+id/btSobremesas"
        android:layout_above="@+id/btBebidas"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_Bebidas"
        android:id="@+id/btBebidas"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_MeuPedido"
        android:id="@+id/btMeuPedido"
        android:layout_below="@+id/btBebidas"
        android:layout_alignRight="@+id/btSobremesas"
        android:layout_alignEnd="@+id/btSobremesas" />


</RelativeLayout>
